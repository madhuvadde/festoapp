<div class="row">

            <!-- Blog Entries Column -->
            <div class="col-md-8">

                <h1 class="page-header">
                    Listing Events
                    <small><%= Event.count %></small>
                </h1>
            

              <% @events.each do |event| %> 
                <h2>
                    <%= link_to event.name, event_path(event.id) %>
                </h2>
                <p class="lead">
                    in <%= Fest.find(event.fest_id).name %>
                </p>
                <p><span class="glyphicon glyphicon-time"></span> on <%= event.start_datetime.strftime("%A, %d %B %Y %H:%M %p") %></p>
                <hr>
                <img class="img-responsive" src="http://placehold.it/900x300" alt="">
                <hr>
                <p><%= event.description %></p>

                <%= link_to event_path(event.id), class: "btn btn-primary" do %>
                 Read More <span class="glyphicon glyphicon-chevron-right"></span>
                <% end %>

            
                <hr>

                <% end %>

                <!-- Pager -->
                <ul class="pager">
                    <li class="previous">
                        <a href="#">&larr; Older</a>
                    </li>
                    <li class="next">
                        <a href="#">Newer &rarr;</a>
                    </li>
                </ul>

            </div>

            <!-- Blog Sidebar Widgets Column -->
            <div class="col-md-4">

                <!-- Blog Search Well -->
                <div class="well">
                    <h4>Blog Search</h4>
                    <div class="input-group">
                        <input type="text" class="form-control">
                        <span class="input-group-btn">
                            <button class="btn btn-default" type="button">
                                <span class="glyphicon glyphicon-search"></span>
                        </button>
                        </span>
                    </div>
                    <!-- /.input-group -->
                </div>

                <!-- Blog Categories Well -->
                <div class="well">
                    <h4>Listing Fests</h4>
                    <div class="row">
                        <div class="col-lg-6">
                            <ul class="list-unstyled">
                            <% Fest.all.each do |fest| %>
                                <li><%= link_to fest.name %></li>
                            <% end %>
                             
                            </ul>
                        </div>
                       
                    </div>
                    <!-- /.row -->
                </div>

                <!-- Side Widget Well -->
                <div class="well">
                    <h4>Side Widget Well</h4>
                    <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Inventore, perspiciatis adipisci accusamus laudantium odit aliquam repellat tempore quos aspernatur vero.</p>
                </div>

            </div>

        </div>
        <!-- /.row -->

<%= link_to 'New Event', new_event_path %>